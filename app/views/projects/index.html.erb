<header>
  <h1>Projects</h1>

  <% admins_only do %>
      <ul class="actions">
        <li>
          <%= link_to "New Project", new_admin_project_path, class: "new" %>
        </li>
      </ul>
  <% end %>
</header>

<div id="projects">
  <% @projects.each do |project| %>
      <h2><%= link_to project.name, project %><span class="badge" data-toggle="tooltip" title="number of tickets"><%= project.tickets.size %></span></h2>
      <p><%= project.description %></p>
  <% end %>
</div>